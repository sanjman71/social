.span.24.last
  = display_flash(:all)

.span-24{:style => "margin: 10px 0 10px;"}
  .inner{:style => 'padding-left: 10px;'}
    %h4 Post to Wall: #{@object.location.try(:name)}

    - message = Message.new
    = form_tag(messages_path, :id => 'new_message', 'data-url' => messages_path(:format => 'json')) do
      %h3 Message:
      = text_area_tag 'message[body]', '', :id => 'message_body', :class => 'autoresize countdown', :style => 'height: 30px;'
      = hidden_field_tag 'message[to_id]', @object.try(:id)
      = hidden_field_tag 'message[to_type]', @object.try(:class).to_s.downcase
      %br
      %span#message_count 140
      %span#message_send= submit_tag 'Send', :id => 'message_send_submit'
