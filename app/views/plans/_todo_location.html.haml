- location = pcheckin.location

.span-8.prepend-1
  %span.name= location.name
  %br
  %span.street= location.street_city
.span-12.last.planned_at
  - if pcheckin.expired?
    %strong Expired
  - else
    Added: #{pcheckin.planned_at.try(:today?) ? 'Today' : pcheckin.planned_at.try(:to_s, :datetime_short)}
    %br
    %strong #{pluralize(pcheckin.expires_days_left, 'day')} left to check in here