.span-24
  .span-5#header_data
    - if user_signed_in?
      %span{:style => 'color: #fff;'}
        = current_user.handle
        %br
        = I18n.t("points", :points => current_user.try(:points).to_i)
    - else
      ==&nbsp;

  .span-19.last#header_links{:style => 'text-align: right;'}
    -# show these links always
    = link_to 'Home', root_path, :class => 'header link'

    - if user_signed_in?
      -#%span{:class => 'vertical bar'}== &nbsp;|&nbsp;
      -#= link_to('Checkins', checkins_path, :class => 'header link')
      %span{:class => 'vertical bar'}== &nbsp;|&nbsp;
      = link_to('Suggestions', suggestions_path, :class => 'header link')
      %span{:class => 'vertical bar'}== &nbsp;|&nbsp;
      = link_to('Profile', user_path(current_user), :class => 'header link')
      %span{:class => 'vertical bar'}== &nbsp;|&nbsp;
      = link_to('Friends', friends_path, :class => 'header link')
      %span{:class => 'vertical bar'}== &nbsp;|&nbsp;
      = link_to('Plans', plans_path, :class => 'header link')
      - if current_user.has_role?('admin')
        %span{:class => 'vertical bar'}== &nbsp;|&nbsp;
        = link_to('Sightings', sightings_path, :class => 'header link')
        %span{:class => 'vertical bar'}== &nbsp;|&nbsp;
        = link_to('Users', users_path, :class => 'header link')
        %span{:class => 'vertical bar'}== &nbsp;|&nbsp;
        = link_to('Locations', locations_path, :class => 'header link')
        %span{:class => 'vertical bar'}== &nbsp;|&nbsp;
        = link_to('Jobs', jobs_path, :class => 'header link')
      %span{:class => 'vertical bar'}== &nbsp;|&nbsp;
      = link_to('Accounts', accounts_path, :class => 'header link')
      %span{:class => 'vertical bar'}== &nbsp;|&nbsp;
      = link_to('Logout', logout_path, :class => 'header link')
    - else
      -#%span{:class => 'vertical bar'}== &nbsp;|&nbsp;
      -#= link_to('Login', login_path, :class => 'header link', :rel => 'nofollow')

