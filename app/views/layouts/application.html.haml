!!! 5
%html
  %head
    %meta{:"http-equiv" => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %title= yield(:title).to_s + " | Outlate.ly"
    = csrf_meta_tag
    = stylesheet_link_tag 'blueprint/screen', 'application', 'location', 'user', 'suggestion', 'orange', 'growl', :cache => false
    = stylesheet_link_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.5/themes/black-tie/jquery-ui.css'
    <!--[if lt IE 8]>
    <link rel="stylesheet" href="blueprint/ie.css" type="text/css" media="screen, projection">
    <![endif]-->
    = yield :stylesheet
    -#= stylesheet_link_tag :all
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js'
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js'
    = javascript_include_tag 'jquery-ujs'
    = javascript_include_tag 'jquery.growl'
    = javascript_include_tag 'hash'
    = javascript_include_tag 'application'
    = yield :javascript
    = yield :head

  %body
    #header
      .container
        = render(:partial => "shared/header_links")

    -# main container
    .container#container{:class => $BlueprintGrid ? 'showgrid' : ''}
      .span-24.last
        = display_flash
        = display_alerts
      .span-23.prepend-1.mat
        = yield :mat
      = yield

    #footer
      .container
