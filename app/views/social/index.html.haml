- javascript('message')

#member-title Member?

.span-16.last
  = display_flash(:all)

.span-16.last
  %ul#home-checkins
    - @friends_out_now.each_pair do |user, checkins|
      = render(:partial => 'checkin', :locals => {:user => user, :checkin => checkins[0]})
    - @friends_out_recently.each_pair do |user, checkins|
      = render(:partial => 'checkin', :locals => {:user => user, :checkin => checkins[0]})

.span-16.last
  #home-following.tipsy
    #home-following-title.titlebar.left Following
    - @following.each do |user|
      = link_to image_tag(user.primary_photo_url, :size => '35x35'), user_path(user), :style => 'margin: 0 2px;', :title => user.handle

-# message overlay
= render(:partial => 'shared/message_overlay', :locals => {:sender => current_user})