- javascript('message')

#member-title Member?

.span-16.last
  = display_flash(:all)

.span-16.last
  %ul#home-checkins
    - if @friends_out_now.empty?
      %div{:style => 'padding: 10px;'}
        %h4 You don't have any friends out right now ... #{link_to('Invite', invite_path)} them to sign up and check in.

    - @friends_out_now.each_pair do |user, checkins|
      = render(:partial => 'checkin', :locals => {:user => user, :checkin => checkins[0]})
    -#- @friends_out_recently.each_pair do |user, checkins|
      -#= render(:partial => 'checkin', :locals => {:user => user, :checkin => checkins[0]})

.span-16.last
  #home-following.tipsy
    #home-following-title.titlebar.left Friends Out Recently
    - @friends_out_recently.each_pair do |user, checkins|
      - checkin = checkins.first
      = link_to image_tag(user.primary_photo_url, :size => '35x35'), user_path(user), :style => 'margin: 0 2px;', :title => "#{user.handle} @ #{checkin.location.try(:name)}"

.span-16.last
  #home-following.tipsy
    #home-following-title.titlebar.left Following
    - @following.each do |user|
      = link_to image_tag(user.primary_photo_url, :size => '35x35'), user_path(user), :style => 'margin: 0 2px;', :title => user.handle

.span-16.last
  #home-following.tipsy
    #home-following-title.titlebar.left Followers
    - @followers.each do |user|
      = link_to image_tag(user.primary_photo_url, :size => '35x35'), user_path(user), :style => 'margin: 0 2px;', :title => user.handle

-# user message overlay
= render(:partial => 'shared/message_overlay', :locals => {:sender => current_user})
