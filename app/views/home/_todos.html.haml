- visible = '' unless local_assigns[:visible]

- objects.each do |locationship|
  - user      = locationship.user
  - location  = locationship.location
  %li.todo{'data-id' => locationship.id, 'data-location-id' => location.id, :class => [visible, 'not-counted']}
    = image_tag(user.primary_photo_url, :size => '50x50', :alt => 'social stream avatar')
    %h4
      = user.handle
      %small plans on going soon
    %h3= location.name
    %div#actions
      = render(:partial => 'home/actions', :locals => {:user => user, :location => location})
