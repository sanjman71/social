-# show current city
= current_city.try(:name)
%span= image_tag("/images/city-menu-arrow.png", :alt => 'city menu arrow')

-# show list of cities not matching current city
%ul
  - city_names.each do |city_name|
    - next if city_name == current_city.try(:name)
    %li= link_to city_name, home_city_path(:name => city_name.parameterize), :id => city_name.downcase.parameterize, :method => :put
